                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="handleButton"
                    android:text="P" />

                <Button
                    android:id="@+id/btnQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="handleButton"
                    android:text="Q" />

                <Button
                    android:id="@+id/btnR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="handleButton"
                    android:text="R" />
